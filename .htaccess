# Đặt timezone cho PHP (chỉ hoạt động nếu host hỗ trợ)
# Nếu dùng Apache, có thể uncomment dòng dưới:
# php_value date.timezone "Asia/Ho_Chi_Minh"
###############################################

###############################################
# Cấu hình rewrite cho CodeIgniter
# Nếu file hoặc thư mục tồn tại, thì bỏ qua
# Nếu không, chuyển hướng về index.php
###############################################
<IfModule mod_rewrite.c>
	RewriteEngine On
	RewriteBase /

	# Nếu file hoặc thư mục tồn tại, thì bỏ qua
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d

	# Nếu không, chuyển hướng về index.php
	RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>

